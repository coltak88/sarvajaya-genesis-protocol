# Sarvajaya Genesis Protocol Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO
API_VERSION=v1
API_TITLE=Sarvajaya Genesis Protocol
API_DESCRIPTION=Advanced AI system for content generation and analysis

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=4
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sarvajaya_genesis
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sarvajaya_genesis
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=50051
WEAVIATE_API_KEY=your-weaviate-api-key
WEAVIATE_CLASS_PREFIX=Sarvajaya

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_SEND_SENT_EVENT=true
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# AI Model Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf

# Vector Embeddings
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100

# Content Generation
MAX_CONTENT_LENGTH=10000
MIN_CONTENT_LENGTH=100
CONTENT_QUALITY_THRESHOLD=0.8
GENERATION_TIMEOUT=300
MAX_GENERATION_RETRIES=3

# Authentication & Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=sarvajaya-genesis
JWT_AUDIENCE=sarvajaya-users

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_LOCATION=./mlruns
MLFLOW_EXPERIMENT_NAME=sarvajaya_genesis
MLFLOW_RUN_NAME_PREFIX=genesis_run
MLFLOW_TRACKING_USERNAME=mlflow
MLFLOW_TRACKING_PASSWORD=your-mlflow-password

# Jupyter Lab Configuration
JUPYTER_TOKEN=your-jupyter-token
JUPYTER_PORT=8888
JUPYTER_IP=0.0.0.0
JUPYTER_ENABLE_LAB=true

# File Storage and Processing
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed
MAX_CONTENT_LENGTH=52428800
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx,ppt,pptx
MAX_FILE_SIZE_MB=50

# Text Processing
MAX_TEXT_LENGTH=100000
TEXT_CHUNK_SIZE=1000
TEXT_OVERLAP_SIZE=200
SUMMARY_MAX_LENGTH=500
KEYWORD_EXTRACTION_COUNT=10

# Sentiment and Analysis
SENTIMENT_ANALYSIS_ENABLED=true
EMOTION_DETECTION_ENABLED=true
TOXICITY_DETECTION_ENABLED=true
LANGUAGE_DETECTION_ENABLED=true
TOPIC_MODELING_ENABLED=true

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8502,http://localhost:8888
CSRF_SECRET_KEY=your-csrf-secret-key
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Monitoring and Logging
PROMETHEUS_METRICS_PATH=/metrics
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn-url
LOG_FORMAT=json
LOG_FILE_PATH=logs/sarvajaya_genesis.log
LOG_ROTATION=midnight
LOG_RETENTION_DAYS=30

# Cache Settings
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=sarvajaya_

# Session Configuration
SESSION_TYPE=redis
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
SESSION_KEY_PREFIX=sarvajaya_session_
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_VECTOR_SEARCH=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_ANALYTICS=true
ENABLE_EXPERIMENT_TRACKING=true
ENABLE_MODEL_MONITORING=true
ENABLE_A_B_TESTING=true

# Business Logic Settings
CONTENT_GENERATION_TIMEOUT=300
MAX_CONCURRENT_GENERATIONS=5
CONTENT_QUALITY_CHECK_ENABLED=true
PLAGIARISM_CHECK_ENABLED=true
SEO_OPTIMIZATION_ENABLED=true
READABILITY_CHECK_ENABLED=true

# External Services
WEBHOOK_SECRET=your-webhook-secret
API_RATE_LIMIT=1000
API_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=1

# Model Performance
MODEL_BATCH_SIZE=32
MODEL_MAX_SEQUENCE_LENGTH=512
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_FREQUENCY_PENALTY=0.0
MODEL_PRESENCE_PENALTY=0.0

# Vector Search
VECTOR_SEARCH_TOP_K=10
VECTOR_SEARCH_SIMILARITY_THRESHOLD=0.7
VECTOR_SEARCH_INDEX_TYPE=hnsw
VECTOR_SEARCH_EF_CONSTRUCTION=128
VECTOR_SEARCH_EF=64

# Content Filtering
CONTENT_FILTER_ENABLED=true
PROFANITY_FILTER_ENABLED=true
SPAM_DETECTION_ENABLED=true
DUPLICATE_CONTENT_CHECK_ENABLED=true
CONTENT_LENGTH_MIN=100
CONTENT_LENGTH_MAX=10000

# Development Settings
RELOAD_ON_CHANGE=true
SHOW_ERROR_DETAILS=true
DEBUG_SQL_QUERIES=false
PROFILE_PERFORMANCE=false
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true